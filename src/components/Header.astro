---
import ThemeToggle from "./ThemeToggle.astro";
---

<header
  class="bg-background/80 sticky top-0 z-50 border-b border-border shadow-sm backdrop-blur-md"
>
  <div class="mx-auto flex max-w-5xl items-center justify-between px-6 py-4">
    <a
      href="/"
      class="flex items-center gap-2 text-xl font-bold tracking-tight transition-colors duration-200 hover:text-accent"
    >
      <img src="/logo.png" alt="Blog Logo" width="36" height="36" class="rounded-sm" />
      Aiden's Blog
    </a>

    <nav class="flex items-center gap-6">
      <a href="/" class="hover:text-accent">Home</a>
      <a href="/tags" class="hover:text-accent">Tags</a>
      <a href="/about" class="hover:text-accent">About</a>
      <ThemeToggle />
    </nav>
  </div>
</header>
